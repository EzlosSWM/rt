---
// External imports
import { Image } from "astro:assets";

import "@fontsource/aboreto";

// Data imports
import about from "@landing/about.jpeg";
import contact from "@landing/contact.jpg";
import nature from "@landing/nature.jpg";
---

<div class="font-aboreto">
  <!--Nature-->
  <section
    class="relative h-52 md:h-72 w-full grayscale ease-in-out duration-500 hover:grayscale-0"
  >
    <Image
      src={nature}
      alt="Nature section link"
      class="absolute -z-10 h-full object-cover object-bottom"
      quality={"mid"}
    />
    <div class="h-full grid place-items-center">
      <a
        href="#"
        class="border border-clear rounded w-1/3 p-3 text-center font-bold tracking-wider backdrop-blur-sm shadow-2xl hover:bg-clean hover:text-black"
        >Nature</a
      >
    </div>
  </section>

  <!--About-->
  <section
    class="relative h-52 md:h-72 w-full grayscale ease-in-out duration-500 hover:grayscale-0"
  >
    <Image
      src={about}
      alt="About section link"
      class="absolute -z-10 h-full object-cover object-bottom"
      quality={"mid"}
    />
    <div class="h-full grid place-items-center">
      <a
        href="/about/"
        class="border border-clear rounded w-1/3 p-3 text-center font-bold tracking-wider backdrop-blur-sm shadow-2xl hover:bg-clean hover:text-black"
        transition:animate="slide"
        transition:name="about">About</a
      >
    </div>
  </section>

  <!--Contact-->
  <section
    class="relative h-52 md:h-72 w-full grayscale ease-in-out duration-500 hover:grayscale-0"
  >
    <Image
      src={contact}
      alt="Contact section link"
      class="absolute -z-10 h-full object-cover object-bottom"
      quality={"mid"}
    />
    <div class="h-full grid place-items-center">
      <a
        href="#"
        class="border border-clear rounded w-1/3 p-3 text-center font-bold tracking-wider backdrop-blur-sm shadow-2xl hover:bg-clean hover:text-black"
        >Contact</a
      >
    </div>
  </section>
</div>
