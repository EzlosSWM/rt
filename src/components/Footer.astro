---
// External imports
import { Icon } from "astro-icon/components";

// Components
import Contact from "@partials/SingleContact.astro";

// Data imports
import contacts from "@data/contactInfo.js";
import socials from "@data/socials.js";
---

<footer class="bg-clear text-black">
  <section class="mx-auto max-w-4xl py-8 px-4 grid space-y-4">
    <div class="flex items-center space-x-4 justify-evenly">
      <Contact />
    </div>
    <div class="flex items-center justify-center space-x-8">
      {
        socials.map((social) => (
          <a href={social.link} target="_blank">
            <Icon name={social.icon} class="text-2xl" />
          </a>
        ))
      }
    </div>
    <h3 class="text-center font-thin text-gray-700">
      Carlos Gomez &copy; <span id="year"></span>
    </h3>
  </section>
</footer>

<script>
  const date = new Date().getFullYear().toString();
  let year = document.getElementById("year");

  if (year !== null) {
    year.textContent = date;
  }
</script>
